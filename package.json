{
  "name": "use-scramble",
  "author": "Tolis Christodoulou <me@tol.is>",
  "homepage": "https://use-scramble.dev",
  "repository": "https://github.com/tol-is/use-scramble",
  "description": "React and Vue hooks/composables for random text animations",
  "keywords": [
    "typescript",
    "react",
    "vue",
    "hook",
    "composable",
    "animation",
    "scramble",
    "typewriter",
    "random text",
    "text animation",
    "randomizer",
    "yugop"
  ],
  "version": "2.3.0",
  "license": "MIT",
  "module": "dist/react/index.esm.js",
  "main": "dist/react/index.js",
  "typings": "dist/react/index.d.ts",
  "exports": {
    "./react": "./dist/react/index.js",
    "./vue": "./dist/vue/index.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "dev": "concurrently \"yarn start\" \"yarn playground\"",
    "playground:react": "parcel playground/react/index.html",
    "playground:vue": "parcel playground/vue/index.html",
    "start": "tsdx watch",
    "build": "yarn build:react && yarn build:vue",
    "build:react": "tsdx build --entry src/react/index.ts --outDir dist/react",
    "build:vue": "tsc -p tsconfig.build.vue.json",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "./dist/react/index.cjs.production.min.js",
      "import": "{ useScramble }",
      "limit": "1KB"
    },
    {
      "path": "./dist/react/index.esm.js",
      "import": "{ useScramble }",
      "limit": "1KB"
    }
  ],
  "devDependencies": {
    "@parcel/transformer-vue": "2.16.0",
    "@size-limit/preset-small-lib": "^4.8.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "concurrently": "^7.6.0",
    "husky": "^8.0.2",
    "iphigenia-in-aulis": "^1.0.0",
    "leva": "^0.10.0",
    "parcel": "^2.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^4.8.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "vue": "^3.3.4"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16",
    "vue": ">=3"
  }
}
